@using CRUDelicious.Models
@model Dish
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New</title>
</head>

<body>
    <h1> Welcome to Cdudelicious add your new dish!</h1>
    @* <a asp-controller="Dishes" asp-action="Home"></a> *@
    <a href="/"> Home</a>
    <from asp-action="Create" asp-controller="Dish" method="POST">
        <div>
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"> </label>
            <input asp-for-formaction="Name" type="text">

            <span asp-validation-for="Chef"></span>
            <label asp-for="Chef"> </label>
            <input asp-for-formaction="Chef" type="text">

            @* <span asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness"> </label>
                <input asp-for-formaction="Tastiness" type="text"> *@

            <span asp-validation-for="Tastiness"></span>
            <label asp-for="Tastiness"></label>
            <select name="" id="">
                <option value=""></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>

            <span asp-validation-for="Calories"></span>
            <label asp-for="Calories"> </label>
            <input asp-for-formaction="Calories" type="text">

            <label asp-for="Description"> </label>
            <textarea asp-for-formaction="Description" type="text">
            <button class="btn btn-outline danger">Submit </button>
        </div>
    </from>
</body>

</html>